{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JS features
    "module": "CommonJS",                   // Node.js module system
    "rootDir": "src",                       // Source files
    "outDir": "dist",                       // Compiled output
    "strict": true,                         // Enable all strict checks
    "esModuleInterop": true,                // Allow default imports from CommonJS
    "skipLibCheck": true,                   // Skip type checking for node_modules
    "typeRoots": ["./node_modules/@types", "./src/types"], // Custom types
    "resolveJsonModule": true,              // Allow importing .json files
    "moduleResolution": "node",             // Resolve modules like Node.js
    "forceConsistentCasingInFileNames": true // Avoid casing issues across OSes
  },
  "include": ["src"],                       // Only compile files in src
  "exclude": ["node_modules", "dist"]       // Ignore build and dependencies
}
